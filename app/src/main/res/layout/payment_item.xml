<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/payment_item_background"
    android:gravity="center_vertical">

    <!-- User Info Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jon Smith"
            android:textStyle="bold"
            android:textSize="23sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/paymentAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:text="$30.00"
            android:textSize="23sp"
            android:textColor="#555555" />
    </LinearLayout>

    <!-- Expiration Date (Hidden by Default) -->
    <TextView
        android:id="@+id/expirationDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expires: 2025-12-31"
        android:textSize="12sp"
        android:textColor="#777777"
        android:visibility="gone" />

    <!-- Approve Button Positioned on the Right -->
    <Button
        android:id="@+id/approveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Approve"
        android:textSize="14sp"
        android:padding="8dp"
        android:backgroundTint="#009900"
        android:textColor="@android:color/white" />
</LinearLayout>
